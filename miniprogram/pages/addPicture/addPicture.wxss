/* miniprogram/pages/addPicture/addPicture.wxss */
textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 32rpx;
  color: #0a0a0a;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
}

.uploader-container {
  width: 100%;
  height: auto;
  padding: 20rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
}

.uploader-image {
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.btn1{
  margin: 3rpx;
  width: 98%;
  background-color:rgb(236, 231, 230);
  color: black;
  border-radius: 20rpx;
}

.btn2{
  margin: 3rpx;
  width: 98%;
  background-color:rgb(102, 218, 36);
  color: white;
  border-radius: 20rpx;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.weui-uploader__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-bottom: 10px;
  align-items: center;
}
.weui-uploader__title {
  flex: 1;
}
.weui-uploader__info {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: #b2b2b2;
}
.weui-uploader__bd {
  margin-bottom: -4px;
  margin-right: -9px;
  overflow: hidden;
}
.weui-uploader__file {
  float: left;
  margin-right: 9px;
  margin-bottom: 9px;
}
.weui-uploader__img {
  display: block;
  width: 79px;
  height: 79px;
}
.weui-uploader__input-box {
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #d9d9d9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
  width: 2px;
  height: 39.5px;
}
.weui-uploader__input-box:after {
  width: 39.5px;
  height: 2px;
}
.weui-uploader__input {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.hideTrue {
  display: none
}
.tiny {
  width: 45px;
  height: 45px;
}
.box1 {
  border: 1px solid #d9d9d9;
  border-radius: 5px;
  width: 45px;
  height: 45px;
  align-items: center;
}
.btn3{
  margin-left: 6px;
  width: 98%;
  color: white;
  border-radius: 20rpx;
}
.prog{
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 5px;
  margin-bottom: 10px;
}
